<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/image_view"
        android:layout_width="100dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/id_title_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="ID:"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/image_view"/>

    <TextView
        android:id="@+id/id_content_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Content"
        android:textColor="#C3AB89"
        app:layout_constraintStart_toEndOf="@id/id_title_text_view"
        app:layout_constraintTop_toTopOf="@id/id_title_text_view"
        app:layout_constraintBottom_toBottomOf="@id/id_title_text_view"/>

    <TextView
        android:id="@+id/login_title_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="Name:"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/id_title_text_view"
        app:layout_constraintStart_toEndOf="@id/image_view"/>

    <TextView
        android:id="@+id/login_content_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Content"
        android:textColor="#C3AB89"
        app:layout_constraintStart_toEndOf="@id/login_title_text_view"
        app:layout_constraintTop_toTopOf="@id/login_title_text_view"
        app:layout_constraintBottom_toBottomOf="@id/login_title_text_view"/>

    <TextView
        android:id="@+id/url_title_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="Url:"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/login_title_text_view"
        app:layout_constraintStart_toEndOf="@id/image_view"/>

    <TextView
        android:id="@+id/url_content_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Content"
        android:textColor="#C3AB89"
        app:layout_constraintStart_toEndOf="@id/url_title_text_view"
        app:layout_constraintTop_toTopOf="@id/url_title_text_view"
        app:layout_constraintBottom_toBottomOf="@id/url_title_text_view"/>


</androidx.constraintlayout.widget.ConstraintLayout>